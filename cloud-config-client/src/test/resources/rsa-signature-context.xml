<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:cc="http://www.squirrelframework.org/schema/config"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.squirrelframework.org/schema/config
            http://www.squirrelframework.org/schema/config/cloud-config.xsd">

    <cc:zk-client connection-string="127.0.0.1:1234"/>

    <cc:zk-resource id="zk-default-cipher-encoder" path="/codec/rsa/public"  resource-type="CipherEncoder"/>
    <cc:zk-resource id="zk-default-cipher-decoder" path="/codec/rsa/private" resource-type="CipherDecoder"/>
    <bean id="zk-default-cipher-codec" class="org.squirrelframework.cloud.resource.security.CipherCodec">
        <constructor-arg name="encoder" ref="zk-default-cipher-encoder"/>
        <constructor-arg name="decoder" ref="zk-default-cipher-decoder"/>
    </bean>

    <cc:zk-resource id="zk-default-signature-encoder" path="/codec/rsa/private"  resource-type="SignatureEncoder"/>
    <cc:zk-resource id="zk-default-signature-checker" path="/codec/rsa/public" resource-type="SignatureChecker"/>
    <bean id="zk-default-signature-codec" class="org.squirrelframework.cloud.resource.security.SignatureCodec">
        <constructor-arg name="encoder" ref="zk-default-signature-encoder"/>
        <constructor-arg name="checker" ref="zk-default-signature-checker"/>
    </bean>
</beans>